<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog contentWidth="600px" contentHeight="130px" draggable="true" id="Alert" title="WorkFlowComments">
		<content>
		
			<TextArea class = "commentsaddArea" width="100%" id="TypeHere" value="" valueLiveUpdate="{/ValueLiveUpdate}"
				liveChange="handleLiveChange"/>
		</content>
		<beginButton>
			<Button type="Default" text="Ok" press="comDialogClosedWithOk"/>
		</beginButton>
		<endButton>
			<Button type="Default" text="Cancel" press="comDialogClosedWithCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>