<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog contentWidth="700px" contentHeight="300px" draggable="true" id="Alert" title="{i18n>changeStatusTitle}">
		<content >
			<List items="{ path: 'statusList>/data/results'}" headerText="Status">
				<ActionListItem text="{statusList>StatusT}" press="selectStatus"/>
			</List>
		</content>
		<beginButton>
			<Button type="Default" text="{i18n>Cancel}" press="statusDialogClosedWithOk"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>